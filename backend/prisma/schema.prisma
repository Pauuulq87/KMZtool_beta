generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  missions  Mission[]
}

model Mission {
  id        String   @id @default(uuid())
  name      String
  settings  Json     // MissionSettings
  waypoints Json     // Waypoint[]
  pois      Json     // POI[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
